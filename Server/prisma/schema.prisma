  endereco String
  situacao_cadastral String
  natureza_juridica String
  CNAEs String
}

model Lancamento {
  id Int @id @default(autoincrement())
}

model NotaFiscal {
  id          Int     @id @default(autoincrement())
  nome_emitente String
  cnpj        String? 
  cpf         String? 
  numero_nota String
  valor       Float?
  chave_acesso Int?
  descricao String
  data_emissao DateTime
  data_criacao DateTime @updatedAt
}

model Imagem {
  id           Int      @id @default(autoincrement())
  url          String
  data_criacao DateTime @updatedAt
}
