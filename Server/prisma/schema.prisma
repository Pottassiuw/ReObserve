generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  email    String @unique
  senha    String
  cpf String @unique
  nome String
}

model Empresa {
  id           Int    @id @default(autoincrement())
  cnpj         String
  nome_fantasia String?
